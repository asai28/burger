<div class="jumbotron text-center" id="heading">
  <h1>Eat-da-Burger!</h1>
</div>
{{!--
<img src='https://images5.alphacoders.com/415/415257.jpg' alt="Burger Image" style="height: 300px; width: 400px" /> --}}

<div class= "container">
  <div class="row">
  <div class="col-sm-6">
  <h2>Burgers yet to try!</h2>

  <ul>
    {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block devoured=true}} {{/unless}} {{/each}}
  </ul>

</div>
  <div class="col-sm-6">
    <h2>The burgers you ate!</h2>

    <ul>
      {{#each burgers}} {{#if devoured}} {{> burgers/burger-block devoured=false}} {{/if}} {{/each}}
    </ul>

  </div>
  </div>

  <div class="row">

<form class="create-form">
<h2>Add a Burger</h2><br>
  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label>
    <br>
    <input type="radio" name="devoured" value="1" checked> Devoured!
    <br>
    <input type="radio" name="devoured" value="0"> Not Devoured
  </div>

  <button type="submit">Add Burger</button>
</form>
  </div>
</div>

